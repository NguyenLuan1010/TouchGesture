<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:id="@+id/gesture_item_layout"
    android:elevation="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_border_gray_radius_3"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/img_app"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:fontFamily="@font/archivo"
        android:textSize="16sp"
        android:ellipsize="end"
        android:paddingHorizontal="10dp"
        android:text="@string/please_draw_a_gesture_to_add_for_open_your_app" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_grey"
        android:paddingHorizontal="15dp"
        android:padding="15dp"
        android:src="@drawable/baseline_file_copy_24" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_each_border_gray"
        android:paddingHorizontal="15dp"
        android:src="@drawable/baseline_cancel_presentation_24" />
</LinearLayout>